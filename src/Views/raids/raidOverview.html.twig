{% extends 'layout.html.twig' %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">{{ guild }} Overview - {{ raid }} Teams</h1>
    </div>

    {% for phase in raidTeams %}
        {% if not phase is empty %}
            <h3 class="section-bar">Phase {{ loop.index }}</h3>
            <div class="row">
                <div class="col-12">
                    <table class="table table-striped table-hover table-sm table-bordered sortable">
                        <thead>
                        <tr>
                            <th scope="col">Player</th>
                            {% for team in phase %}
                                <th><nobr>{{ team.name }}</nobr></th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                            {% for member in members %}
                                {% set playerCharacters = member.characters %}
                                <tr>
                                    <td>{{ member.name }}</td>
                                    {% for team in phase %}
                                        {% include 'raids/raidTeamReady.html.twig' %}
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}