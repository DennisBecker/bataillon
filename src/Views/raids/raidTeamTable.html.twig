<div class="col-4">
    <h4>{{ team.name }} - {{ team.damage|number_format }}</h4>
    <table class="table raidtable tstraid">
        <thead>
        <tr>
            <th>Name</th>
            <th>*</th>
            <th>G</th>
            <th>L</th>
            <th>Ready?</th>
        </tr>
        </thead>
        <tbody>
        {% for character in team.characters %}
            {% set char = attribute(characters, character) %}
            {% set playerChar = attribute(playerCharacters, character) %}
        <tr>
            <td bgcolor="#cf95ff">{{ char.name }}</td>
            <td style="background-color: rgb(224, 125, 134);">{{ playerChar.rarity|default(0) }}{% if playerChar.rarity - playerChar.rarity_old > 0 %}<span class="oi oi-arrow-top"></span>{{ playerChar.rarity - playerChar.rarity_old }}{% endif %}</td>
            <td style="background-color: rgb(224, 125, 134);">{{ playerChar.gear|default(0) }}</td>
            <td style="background-color: rgb(224, 125, 134);">{{ playerChar.level|default(0) }}</td>
            <td style="background-color: rgb(224, 125, 134);">No!</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>