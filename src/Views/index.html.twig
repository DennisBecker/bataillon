{% extends 'layout.html.twig' %}

{% block content %}
    <table class="table table-striped table-hover table-sm">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Guild</th>
            <th scope="col">Member</th>
            <th scope="col">Galactic Power</th>
            <th scope="col">Galactic Power (Characters)</th>
            <th scope="col">Galactic Power (Ships)</th>
        </tr>
        </thead>
        <tbody>
        {% for guild, data in guilds %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td><a href="/{{ guild|url_encode }}/index.html">{{ guild }}</a></td>
                <td>{{ data.member|length }}</td>
                <td>{{ data.power|number_format }}</td>
                <td>{{ data.power_characters|number_format }}</td>
                <td>{{ data.power_ships|number_format }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}